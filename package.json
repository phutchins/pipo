  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "NODE_ENV=test ./node_modules/.bin/mocha test/** --recursive",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --recursive",
    "linter": "./node_modules/.bin/jshint --config .jshintrc ./main.js ./server ./public/client.js ./public/js ./public/views ./test",
    "build": "./node_modules/.bin/browserify index.js -s storj -o dist/storj.browser.js",
    "make-docs": "mkdir -p ./jsdoc && rm -r ./jsdoc && ./node_modules/.bin/jsdoc index.js lib -r -R README.md -u ./doc -c .jsdoc.json --verbose -d ./jsdoc && cp -r doc/assets jsdoc/assets",
    "publish-docs": "npm run make-docs && node script/publishdoc.js",
    "start": "node ./server/server.js",
    "start-client": "electron ."
  },
  "directories": {
    "test": "test",
    "public": "public",
    "server": "server"
  },
